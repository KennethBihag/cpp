{
    "configurations": [
        {
            "name": "Win32 - cygwin64",
            "includePath": [
                "${workspaceFolder}\\*\\include",
                "${workspaceFolder}"
            ],
            "compilerPath": "${env:HOMEDRIVE}\\cygwin64\\bin\\gcc.exe"
        },
        {
            "name": "Win32 - mingw32",
            "compilerPath": "C:/Program Files (x86)/mingw32/bin/g++.exe",
            "browse": {"path": ["*/"]},
            "cppStandard": "c++17"
        },
        {
            "name": "Linux",
            "includePath": [
                "${workspaceFolder}/**",
                "${workspaceFolder}"
            ],
            "browse": {"path": ["*/"]},
            "compilerPath": "/usr/bin/g++",
            "cppStandard": "c++11",
            "cStandard": "c99"
        },
        {
            "name": "Win32 - MSVC",
            "browse": {"path": ["*/"]},
            "intelliSenseMode": "windows-msvc-x64"
        }
    ],
    "version": 4
}